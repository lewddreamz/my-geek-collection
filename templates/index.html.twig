{% extends 'base.html.twig' %}

{% block body %}
<div class="search">
    <form action="search">
        <input type="text" name="title" id="title">
        <fieldset>
            <label for="api">TMDB<input type="radio" name="api" id="" value="tmdb" checked></label>
            <label><input type="radio" name="api" value="MAL">MAL</label>
        </fieldset>
        <button type="submit">Поиск</button>
    </form>
</div>
<div class="collection-create">
<p>Добавить новую коллекцию</p>
        <form action="{{path('collection_create')}}" method="POST">
            <input type="text" name="name" id="collection-name">
            <select name="type" id="collection-type">
                <option value="film">Фильмы</option>
                <option value="game">Игры</option>
                <option value="book">Книги</option>
            </select>
            <button type="submit">Добавить</button>
        </form>
    </div>
{% for collection in collections %}
    {% for entry in collection %}
        <p>{{entry.title}}</p>
    {% endfor %}
{% endfor %}

{% endblock %}